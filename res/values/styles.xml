<resources>
    <style name="NodeEntry">
        <item name="android:textColor">@color/dark</item>
    </style>
    <style name="NodeEntry.Red">
        <item name="android:textColor">@color/offline</item>
    </style>
    <style name="NodeEntry.Green">
        <item name="android:textColor">@color/online</item>
    </style>
    <style name="mOnionOTabStyle"
        	parent="@android:style/Widget.TabWidget">
        <item name="android:textColor">@drawable/tab_text_selector</item>
    </style>
    <style name="mOnionOAlertDialogStyle"
        	parent="@android:style/Theme.Dialog">
        <item name="android:fullDark">@color/bright</item>
    </style>
    <style name="mOnionOSpinner"
        	parent="android:Widget">
        <item name="android:background">@drawable/spinner_background_selector</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="mOnionODropdownStyle"
        	parent="@android:style/Widget.DropDownItem.Spinner">
        <item name="android:background">@drawable/background_color_selector</item>
        <item name="android:checkMark">@drawable/radio_button_selector</item>
    </style>
    <style name="mOnionOEditTextStyle"
        	parent="@android:style/Widget.EditText">
        <item name="android:spinnerStyle">@style/mOnionOSpinner</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/edit_text_selector</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColorHint">@color/light</item>
        <item name="android:textColorHighlight">@color/bright</item>
    </style>
    <style name="mOnionOStyle"
        	parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:editTextStyle">@style/mOnionOEditTextStyle</item>
        <item name="android:spinnerDropDownItemStyle">@style/mOnionODropdownStyle</item>
        <item name="android:alertDialogStyle">@style/mOnionOAlertDialogStyle</item>
        <item name="android:tabWidgetStyle">@style/mOnionOTabStyle</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:windowBackground">@color/bright</item>
        <item name="android:colorBackground">@color/bright</item>
        <item name="android:tabStripEnabled">false</item>
        <item name="android:typeface">normal</item>
    </style>
    <style name="mOnionOStyle.TableTitleCell">
        <item name="android:paddingRight">15px</item>
    </style>
    <style name="mOnionOStyle.ActionBarImage">
        <item name="android:padding">5px</item>
    </style>
    <style name="mOnionOStyle.Section">
        <item name="android:paddingTop">5px</item>
        <item name="android:paddingBottom">5px</item>
    </style>
</resources>